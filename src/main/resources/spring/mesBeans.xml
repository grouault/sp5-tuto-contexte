<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Declarez votre bean client -->
	<beans>

		<bean id="voiture1" class="com.exo.beans.Voiture">
			<property name="marque" value="Opel" />
			<property name="modele" value="Grandland X" />
		</bean>

		<bean id="adresse1" class="com.exo.beans.Adresse">
			<property name="rue" value="1 rue Luc Aubrac" />
			<property name="codePostal" value="90260" />
			<property name="ville" value="Juvisy" />
			<property name="pays" value="France" />
		</bean>

		<bean id="client1" class="com.exo.beans.Client">
			<property name="nom" value="Rouault" />
			<property name="prenom" value="Gildas" />
			<property name="age" value="45" />
			<property name="adresse" ref="adresse1" />
		</bean>

		<!-- CLIENT 2 -->
		<bean id="adresse2" class="com.exo.beans.Adresse">
			<constructor-arg name="rue" value="rue des lilas" ></constructor-arg>
			<constructor-arg name="ville" value="Pré-Saint-Gervais" ></constructor-arg>
			<constructor-arg name="codePostal" value="93087" ></constructor-arg>
			<constructor-arg name="pays" value="France" ></constructor-arg>
		</bean>

		<bean id="client2" class="com.exo.beans.Client">
			<property name="nom" value="Dominguez" />
			<property name="prenom" value="Dimitri" />
			<property name="age" value="19" />
			<property name="adresse" ref="adresse2" />
		</bean>

		<!-- CLIENT 3 -->
		<bean id="client3" class="com.exo.beans.Client">
			<property name="nom" value="Vanavermat" />
			<property name="prenom" value="Greg" />
			<property name="age" value="29" />
			<property name="adresse">
				<bean name="adresse3" class="com.exo.beans.Adresse">
					<property name="rue" value="rue du tennis" />
					<property name="ville" value="Loisirs"/>
					<property name="codePostal" value="10000" />
					<property name="pays" value="Pays des rêves" />
				</bean>
			</property>
		</bean>

		<bean id="client4" class="com.exo.beans.Client">
			<constructor-arg name="nom" value="titi" ></constructor-arg>
			<constructor-arg name="prenom" value="toto" ></constructor-arg>
			<constructor-arg name="age" value="27" ></constructor-arg>
			<constructor-arg name="adresse">
				<bean name="adresse4" class="com.exo.beans.Adresse">
					<constructor-arg name="rue" value="rue de la musique" />
					<constructor-arg name="ville" value="Loisirs"/>
					<constructor-arg name="codePostal" value="20000" />
					<constructor-arg name="pays" value="Pays des songes" />
				</bean>
			</constructor-arg>
		</bean>

	</beans>

</beans>
